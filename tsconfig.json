{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "lib",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
